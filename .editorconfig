# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Go mod and sum files
[go.mod]
indent_style = tab
indent_size = 4

[go.sum]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Git config files
[.gitattributes]
indent_style = tab

[.gitignore]
indent_style = tab

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 4

# XML files
[*.xml]
indent_style = space
indent_size = 2
